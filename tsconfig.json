{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "lib": ["es2017", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "dist",
    "esModuleInterop":true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "typeRoots": ["../node_modules/@types"],
    "allowSyntheticDefaultImports": true, // To not write import * as React enable this option.
    "jsx": "react-jsx" // To not write import React in every file use 'react-jsx' option.
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    ".idea",
    "rollup.config.js",
    "node_modules"
  ]
}
